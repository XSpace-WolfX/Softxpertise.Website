<Project Sdk="Microsoft.NET.Sdk.BlazorWebAssembly">

  <PropertyGroup>
    <TargetFramework>net8.0</TargetFramework>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
	<BlazorWebAssemblyEnableCompression>true</BlazorWebAssemblyEnableCompression>
	<PublishTrimmed>true</PublishTrimmed>
  </PropertyGroup>

  <ItemGroup>
    <Content Remove="wwwroot\fonts\ZenKakuGothicNew-Black.ttf" />
    <Content Remove="wwwroot\fonts\ZenKakuGothicNew-Bold.ttf" />
    <Content Remove="wwwroot\fonts\ZenKakuGothicNew-Light.ttf" />
    <Content Remove="wwwroot\fonts\ZenKakuGothicNew-Medium.ttf" />
    <Content Remove="wwwroot\fonts\ZenKakuGothicNew-Regular.ttf" />
    <Content Remove="wwwroot\images\background_home.svg" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.AspNetCore.Components.WebAssembly" Version="8.0.12" />
    <PackageReference Include="Microsoft.AspNetCore.Components.WebAssembly.DevServer" Version="8.0.12" PrivateAssets="all" />
    <PackageReference Include="Microsoft.Extensions.Configuration.Abstractions" Version="9.0.1" />
    <PackageReference Include="Microsoft.Extensions.Http" Version="9.0.1" />
  </ItemGroup>

</Project>
